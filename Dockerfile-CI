FROM node
VOLUME /TRSS-Yunzai
WORKDIR /TRSS-Yunzai
RUN apt update && apt install -y redis chromium locales \
    && npm install pnpm -g && pnpm config set registry https://registry.npmmirror.com \
    && apt clean && rm -rf /tmp/*
EXPOSE 2536/tcp
EXPOSE 50831/tcp
CMD cd TRSS-Yunzai && pnpm i && pnpm app
